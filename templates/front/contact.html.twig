{% extends 'front/base.html.twig' %}

{% block javascripts %}
    {{ parent() }}

    <script src='https://www.google.com/recaptcha/api.js'></script>

    <script type="text/javascript">
        var RecaptchaOptions = {
            lang : 'pl'
        };
    </script>
{% endblock %}

{% block body %}
    <div class="page-head">
        <div class="container">
            <div class="row">
                <div class="page-head-content">
                    <h1 class="page-title">{{ 'contact'|trans }}</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="content-area recent-property padding-top-40" style="background-color: #FFF;">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    {{ config.config.footer|raw }}<br/><br/>
                    <div class="" id="contact1">
                        <div class="row">
                            <div class="col-sm-4">
                                <h4><i class="fa fa-map-marker"></i> {{ 'address'|trans }}</h4>
                                <p>{{ config.config.address }}</p>
                            </div>
                            <!-- /.col-sm-4 -->
                            <div class="col-sm-4">
                                <h4><i class="fa fa-phone"></i> {{ 'call_us'|trans }}</h4>
                                <p>{{ config.config.phone }}</p>
                            </div>
                            <!-- /.col-sm-4 -->
                            <div class="col-sm-4">
                                <h4><i class="fa fa-envelope"></i> {{ 'write_to_us'|trans }}</h4>
                                {{ config.config.email }}
                            </div>
                        </div>
                        <hr>

                        <hr>
                        <h2>{{ 'contact_form'|trans }}</h2>

                        {% include 'front/addons/flashMessages.html.twig' %}

                        {% form_theme form 'form/default_user.html.twig' %}

                        {{ form_start(form) }}

                        <div class="row">
                            <div class="col-md-12">
                                <div class="g-recaptcha" data-sitekey="6Lf7OFwUAAAAAFOa6v8rxkM_xvUWFVTVrt-quxR8"></div>
                            </div>
                        </div>
                        {{ form_widget(form) }}
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
