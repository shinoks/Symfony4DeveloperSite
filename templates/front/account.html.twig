{% set title = 'account'|trans %}
{% extends 'front/base.html.twig' %}

{% block body %}
    {% include 'front/top.html.twig' %}

    <div class="content-area blog-page padding-top-40" style="background-color: #FCFCFC; padding-bottom: 55px;">
        <div class="container">
            <div class="row">
                <div class="blog-lst col-md-12 pl0">

                    {% include 'front/flashMessages.html.twig' %}

                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#home">Profil</a></li>
                        <li><a data-toggle="tab" href="#menu1">Lista ofert</a></li>
                        <li><a data-toggle="tab" href="#menu2">Złóż ofertę</a></li>
                    </ul>

                    <div class="tab-content">
                        <div id="home" class="tab-pane fade in active">
                            <div class="profile-header">
                                <h3>
                                    <b>{{ 'yours_account'|trans }}</b><br/>
                                </h3>
                            </div>
                            <div class="">
                                <label>{{ 'first_name'|trans }}:</label>
                                {{ app.user.firstName }}<br/>
                                <label>{{ 'last_name'|trans }}:</label>
                                {{ app.user.lastName }}<br/>
                                <label>{{ 'email'|trans }}:</label>
                                {{ app.user.email }}<br/>
                            </div>
                            <a class="btn btn-default btn-border" href="{{ path('front_user_account_edit') }}">{{ 'edit'|trans }}</a>
                        </div>
                        <div id="menu1" class="tab-pane fade">
                            <div class="profile-header">
                            <h3>
                                <b>{{ 'offer_list'|trans }}</b><br/>
                            </h3>
                            </div>
                            <div class="">
                                Text
                            </div>
                        </div>
                        <div id="menu2" class="tab-pane fade">
                            <div class="profile-header">
                                <h3>
                                    <b>{{ 'make_an_offer'|trans }}</b><br/>
                                </h3>
                            </div>
                            <div class="">
                                <a class="btn btn-succes" href="{{ path('front_offer_new') }}">{{ 'make_an_offer'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
{% endblock %}
