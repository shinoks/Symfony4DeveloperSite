<div class="footer-area">

    <div class=" footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6 wow fadeInRight animated">
                    <div class="single-footer">
                        <h4>{{ 'address'|trans|capitalize }} </h4>
                        <div class="footer-title-line"></div>
                        <ul class="footer-adress">
                            <li><i class="pe-7s-map-marker strong"> </i> {{ config.config.address }}</li>
                            <li><i class="pe-7s-mail strong"> </i> {{ config.config.email }}</li>
                            <li><i class="pe-7s-call strong"> </i> {{ config.config.phone }}</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 wow fadeInRight animated">
                    <div class="single-footer">
                        <h4>{{ 'links'|trans }} </h4>
                        <div class="footer-title-line"></div>
                        <ul class="footer-menu">
                            <li><a href="{{ path('index') }}">O Nas</a>  </li>
                            <li><a href="#">{{ 'news'|trans }}</a>  </li>
                            <li><a href="#">{{ 'realizations'|trans }} </a></li>
                            <li><a href="#">{{ 'investor_zone'|trans }}</a></li>
                            <li><a href="#">{{ 'sublease_zone'|trans }}</a>  </li>
                            <li><a href="{{ path('contact') }}">Kontakt </a>  </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 wow fadeInRight animated">
                    <div class="single-footer">
                        <h4>{{ 'news'|trans }}</h4>
                        <div class="footer-title-line"></div>
                        <ul class="footer-blog">
                            {% for latestNews in news.latestNews %}
                            <li>
                                <div class="col-md-3 col-sm-4 col-xs-4 blg-thumb p0">
                                    <a href="">
                                        <img src="{{ asset(latestNews.image) }}">
                                    </a>
                                    <span class="blg-date">{{ latestNews.created|date('d-m-Y') }}</span>

                                </div>
                                <div class="col-md-8  col-sm-8 col-xs-8  blg-entry">
                                    <h6> <a href="">{{ latestNews.name }} </a></h6>
                                    <p style="line-height: 17px; padding: 8px 2px;">{{ latestNews.text[0:50]|striptags }} ...</p>
                                </div>
                            </li>
                            {% endfor %}

                        </ul>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 wow fadeInRight animated">
                    <div class="single-footer news-letter">
                        {{ render(controller('App\\Controller\\SubscriberController::getSubscribeForm')) }}
                        <div class="social pull-right">
                            <ul>
                                <li><a class="wow fadeInUp animated" href="https://twitter.com/4eliteinvestments"><i class="fa fa-twitter"></i></a></li>
                                <li><a class="wow fadeInUp animated" href="https://www.facebook.com/4eliteinvestments" data-wow-delay="0.2s"><i class="fa fa-facebook"></i></a></li>
                                <li><a class="wow fadeInUp animated" href="https://plus.google.com/4eliteinvestments" data-wow-delay="0.3s"><i class="fa fa-google-plus"></i></a></li>
                                <li><a class="wow fadeInUp animated" href="https://instagram.com/4eliteinvestments" data-wow-delay="0.4s"><i class="fa fa-instagram"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="footer-copy text-center">
        <div class="container">
            <div class="row">
                <div class="pull-left">
                    <span> {{ config.config.title }}  </span>
                </div>
                <div class="bottom-menu pull-right">
                    <ul>
                        <li><a class="wow fadeInUp animated" href="#" data-wow-delay="0.2s">{{ 'about_us'|trans }}</a></li>
                        <li><a class="wow fadeInUp animated" href="#" data-wow-delay="0.4s">{{ 'faq'|trans }}</a></li>
                        <li><a class="wow fadeInUp animated" href="#" data-wow-delay="0.6s">{{ 'contact'|trans }}</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
