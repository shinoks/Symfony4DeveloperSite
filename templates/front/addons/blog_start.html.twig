<div class="content-area blog-page" style="background-color: #FCFCFC;">
    <div class="container">
        <div class="row">
            {% for article in articles %}
            <div class="blog-lst {% if articles|length > 1 %}col-md-6{% else %}col-md-12{% endif %} pl0">

                    <section class="post">
                        <div class="text-center page-title">
                            <h2 class="wow fadeInLeft animated">{{ article.name }}</h2>
                            <div class="title-line wow fadeInRight animated"></div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6"></div>
                            <div class="col-sm-6 right" >
                                <p class="date-comments">
                                    <i class="fa fa-calendar-o"></i> {{ article.created|date('d-m-Y') }}
                                </p>
                            </div>
                        </div>
                        {% if article.image is not null %}
                            <div class="image wow fadeInLeft animated">
                                <a href="{{ path('front_article_show',{'id':article.id}) }}">
                                    <img src="{{ asset(article.image) }}" class="img-responsive" alt=""/>
                                </a>
                            </div>
                        {% endif %}
                        {% if article.shortText is not empty %}
                        <p class="intro">{{ article.shortText|raw }}</p>
                        <p class="read-more">
                            <a href="{{ path('front_article_show',{'id':article.id}) }}" class="btn btn-default btn-border">{{ 'read_more'|trans }} ...</a>
                        </p>
                        {% else %}
                            <p class="intro">{{ article.text|raw }}</p>
                        {% endif %}
                    </section>
            </div>
            {% endfor %}
        </div>

    </div>
</div>
