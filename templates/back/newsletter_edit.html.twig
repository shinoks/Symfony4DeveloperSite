{% extends 'back/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include 'back/addons/ckeditor_config.html.twig' %}
    <script>
        CKEDITOR.replace( 'newsletter_text' );
    </script>
{% endblock %}


{% block body %}

    {% include 'back/leftPanel.html.twig' %}

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

    {% include 'back/header.html.twig' %}

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>{{ 'newsletter.edit'|trans }}</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active">{{ 'newsletter.newsletters_list'|trans }} > {{ 'newsletter.edit'|trans }}</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

        {% include 'back/flashMessages.html.twig' %}

    <div class="card">
        <div class="card-body">
            {% form_theme form 'form/default_admin.html.twig' %}

            {{ form_start(form) }}
            {{ form_widget(form) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
