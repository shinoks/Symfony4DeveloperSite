{% extends 'back/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.ckeditor.com/4.8.0/full/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'article_text' );
        CKEDITOR.replace( 'article_shortText' );
    </script>

    <script>
        jQuery('.add-another-collection-widget').click(function (e) {
                e.preventDefault();
                var list = jQuery(jQuery(this).attr('data-list'));
                // Try to find the counter of the list
                var counter = list.data('widget-counter') | list.children().length;
                // If the counter does not exist, use the length of the list
                if (!counter) { counter = list.children().length; }

                // grab the prototype template
                var newWidget = list.attr('data-prototype');
                // replace the "__name__" used in the id and name of the prototype
                // with a number that's unique to your emails
                // end name attribute looks like name="contact[emails][2]"
                newWidget = newWidget.replace(/__name__/g, counter);
                // Increase the counter
                counter++;
                // And store it, the length cannot be used if deleting widgets is allowed
                list.data(' widget-counter', counter);

                // create a new list element and add it to the list
                var newElem = jQuery(list.attr('data-widget-tags')).html(newWidget);
                newElem.appendTo(list);
        });
    </script>
{% endblock %}


{% block body %}

    {% include 'back/leftPanel.html.twig' %}

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

    {% include 'back/header.html.twig' %}

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Nowy artykuł</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active">Artykuły > Nowy artykuł</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

        {% include 'back/flashMessages.html.twig' %}

    <div class="card">
        <div class="card-body">
            {% form_theme form 'form/default_admin.html.twig' %}

            {{ form_start(form) }}

            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}

            {{ form_label(form.mainImage) }}
            {{ form_widget(form.mainImage) }}

            {{ form_label(form.sellingPrice) }}
            {{ form_widget(form.sellingPrice) }}

            {{ form_label(form.currency) }}
            {{ form_widget(form.currency) }}

            {{ form_label(form.volume) }}
            {{ form_widget(form.volume) }}

            {{ form_label(form.city) }}
            {{ form_widget(form.city) }}

            {{ form_label(form.rooms) }}
            {{ form_widget(form.rooms) }}

            <ul id="email-fields-list"
                data-prototype="{{ form_widget(form.default.vars.prototype)|e }}"
                data-widget-tags="{{ '<li></li>'|e }}">
                {% for defaultField in form.default %}
                    <li>
                        {{ form_errors(defaultField) }}
                        {{ form_widget(defaultField) }}
                    </li>
                {% endfor %}
            </ul>

            <a href="#"
               class="add-another-collection-widget"
               data-list="#email-field-list">Add another value</a>

            <ul id="media-fields-list"
                data-prototype="{{ form_widget(form.media.vars.prototype)|e }}"
                data-widget-tags="{{ '<li></li>'|e }}">
                {% for media in form.media %}
                    <li>
                        {{ form_errors(media) }}
                        {{ form_row(media) }}
                    </li>
                {% endfor %}
            </ul>

            <a href="#"
               class="add-another-collection-widget"
               data-list="#media-field-list">Add another media value</a>

            {{ form_label(form.security) }}
            {{ form_errors(form.security) }}

            <ul>
                {% for securityField in form.security %}
                    <li>
                        {{ form_errors(securityField) }}
                        {{ form_widget(securityField) }}
                    </li>
                {% endfor %}
            </ul>



            {{ form_widget(form) }}

            {{ form_end(form) }}
        </div>
    </div>
    </div>
{% endblock %}
