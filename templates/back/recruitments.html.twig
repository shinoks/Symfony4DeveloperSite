{% extends 'back/base.html.twig' %}

{% block body %}

    {% include 'back/leftPanel.html.twig' %}


    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        {% include 'back/header.html.twig' %}

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>{{ 'recruitments_list'|trans }}</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li class="active">{{ 'recruitments'|trans }} > {{ 'recruitments_list'|trans }}</li>
                        </ol>
                        <div class="page-header float-right">
                            <a href="{{ path('admin_recruitment_new') }}"><i class="fa fa-user-plus text-dark"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% include 'back/flashMessages.html.twig' %}

        <div class="content mt-3">
            <div class="animated fade-in">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>{{ 'name'|trans }}</th>
                            <th>{{ 'number'|trans }}</th>
                            <th>{{ 'collected_amount'|trans }}</th>
                            <th>{{ 'payed_amount'|trans }}</th>
                            <th>{{ 'desired_amount'|trans }}</th>
                            <th>{{ 'status'|trans }}</th>
                            <th>{{ 'investment_period'|trans }}</th>
                            <th>{{ 'interest'|trans }}</th>
                            <th>{{ 'investment_type'|trans }}</th>
                            <th>{{ 'rooms'|trans }}</th>
                            <th>{{ 'city'|trans }}</th>
                            <th>{{ 'created'|trans }}</th>
                            <th>Wyłącz</th>
                            <th>Usuń</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for recruitment in recruitments %}
                            <tr>
                                <td>{{ recruitment.id }}</td>
                                <td>{{ recruitment.name }}</td>
                                <td><a href="{{ path('admin_recruitment_show',{'id':recruitment.id}) }}">{{ recruitment.number }}</a></td>
                                <td>--- zł</td>
                                <td>--- zł</td>
                                <td>{{ recruitment.desiredAmount }} zł</td>
                                <td>{{ recruitment.status.name }}</td>
                                <td>{{ recruitment.investmentPeriod }} msc</td>
                                <td>{{ recruitment.interest }} %</td>
                                <td>{{ recruitment.investmentType }}</td>
                                <td>{{ recruitment.rooms }}</td>
                                <td>{{ recruitment.city }}</td>
                                <td>{{ recruitment.created|date('d-m-Y H:i:s') }}</td>
                                {% if recruitment.isActive == 1 %}
                                    <td><a href="{{ path('admin_recruitment_disable', { 'id':recruitment.id,'status':0 }) }}" class="btn btn-warning">Wyłącz</a></td>
                                {% else %}
                                    <td><a href="{{ path('admin_recruitment_disable', { 'id':recruitment.id,'status':1 }) }}" class="btn btn-success">Włącz</a></td>
                                {% endif %}
                                <td><a href="{{ path('admin_recruitment_delete', { 'id':recruitment.id }) }}" class="btn btn-danger">Usuń</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        </div>
        <!--/.col-->

{% endblock %}

