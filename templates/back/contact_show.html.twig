{% extends 'back/base.html.twig' %}

{% block body %}

    {% include 'back/leftPanel.html.twig' %}

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

    {% include 'back/header.html.twig' %}

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>{{ 'contact_form'|trans }}</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active"><a href="{{ path('admin_contacts') }}">{{ 'contact_forms'|trans }}</a> > {{ 'contact_form'|trans }}</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    {% include 'back/flashMessages.html.twig' %}

    <div class="card">
        <div class="card-body">
            <section class="card">
                <div class="card-header user-header alt bg-dark">
                    <div class="media-body">
                        <h2 class="text-light">
                            {{ contact.title }}
                        </h2>
                    </div>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>{{ 'post_date'|trans }}:</b>
                        {{ contact.created|date('d-m-Y H:i:s') }}
                    </li>
                    <li class="list-group-item">
                        <b>{{ 'user_data'|trans }}:</b>
                        {% if contact.sender is not empty %}
                            {{ contact.sender.firstName }} {{ contact.sender.lastName }}
                        {% else %}
                            {{ 'user_not_logged'|trans }} - {{ contact.send }}
                        {% endif %}
                    </li>
                    <li class="list-group-item">
                        <b>{{ 'message'|trans }}:</b><br/>
                        {{ contact.message }}
                    </li>
                </ul>
            </section>
            <!--//TODO Create reply to action-->
            <a href="" class="btn btn-primary">{{ 'reply'|trans }}</a>
        </div>
    </div>
{% endblock %}
